{
	"compilerOptions":
	{
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		
		"paths":
		{
			"@controllers": ["src/controllers/index"],
			"@helpers": ["src/helpers/index"],
			"@middleware": ["src/middleware/index"],
			"@models": ["src/models/index"],
			"@server": ["src/server/index"],
			"@services": ["src/services/index"],
			"@storage": ["src/storage/index"],
			"@typings": ["src/typings/index"],
			"@validators": ["src/validators/index"],
			"@workers": ["src/workers/index"]
		}
	},
	"include": ["./src/**/*.ts"]
}
